{
  "extends": [
    "standard",
    "plugin:react/recommended",
  ],
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
    }
  },
  "plugins": [
    "import",
  ],
  "env": {
    "browser": true,
    "mocha": true,
    "node": true,
    "es6": true,
  },
  "rules": {
    "semi": ["error", "always"],
    "comma-dangle": ["error", "always"],
    "no-console": 0,
    "space-before-function-paren": ["error", "never"],
    "react/prop-types": 0,
  },
}
